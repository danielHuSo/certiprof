<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p : %m%n%ex" />
        <Property name="DIR_FILE" value="logs" />
    </Properties>
    <Appenders>
        <Console name="Console-Appender" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.tutorial.certiprof" level="debug" additivity="true">
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console-Appender" />
        </Root>
    </Loggers>
</Configuration>